{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"load-generator-slave",
      "labels":{
         "name":"load-generator-slave"
      }
   },
   "spec":{
      "replicas":5,
      "selector":{
         "name":"load-generator-slave"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"load-generator-slave"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"load-generator-slave",
                  "image":"quay.io/maratoid/trogdor-load",
                  "command": ["locust", "-f", "/scripts/locustfile.py", "--slave", "--master-host=load-generator-master", "--host=http://framework:9080"],
                  "ports":[
                     {
                        "containerPort":8089,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}