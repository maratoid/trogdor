{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"load-generator-master",
      "labels":{
         "name":"load-generator-master"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"load-generator-master"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"load-generator-master"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"load-generator-master",
                  "image":"quay.io/samsung_ag/trogdor-load-generator:latest",
                  "command": ["locust", "-f", "/scripts/locustfile.py", "--master", "--host=http://framework:9080"],
                  "ports":[
                     {
                        "containerPort":8089,
                        "protocol":"TCP"
                     },
                     {
                        "containerPort":5557,
                        "protocol":"TCP"
                     },
                     {
                        "containerPort":5558,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}